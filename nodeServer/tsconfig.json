{
  "compileOnSave": true,
  "include": [
    "ts/*.ts"
  ],
  "compilerOptions": {
    "outDir": "../lib",
    "sourceMap": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "express"
    ],
    "esModuleInterop": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declarationMap": true,
    "inlineSources": false,
    "declaration": true,
    "stripInternal": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  }
}
